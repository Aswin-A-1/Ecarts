<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        #sidebar {
            background-color: #fff;
            height: 86vh;
        }

        .custom-border {
            border: 2px solid #3883f4;
            border-radius: 5px;
        }

        .maindiv{
            height: 86vh;
        }

        #sidebar a.nav-link:hover {
            color: #3883f4 !important;
        }

    </style>
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand text-primary" href="#">Admin Dashboard</a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row mt-4 ml-2">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-4 col-lg-2 d-md-block sidebar custom-border">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/usermanagement">
                                User Management
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-primary" href="/admin/productmanagement">
                                Product Management
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/categorymanagement">
                                Category Management
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-dark" href="/admin/logout">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-8 col-lg-10">
                <div class="custom-border maindiv p-5">
                    <a href="/admin/addproduct" class="btn btn-primary mb-4">Add Product</a>
                    <div class="container ">
                        <!-- Add your user data tables here -->
                        <table class="table ">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Model</th>
                                    <th>Discription</th>
                                    <th>Image</th>
                                    <th>Rating</th>
                                    <th>Status</th>
                                    <th>List/UnList</th>
                                    <th>Action</th>
                                    <!-- Add more table headers as needed -->
                                </tr>
                            </thead>
                            <tbody id="userTableBody">
                                <% if( products.length > 0) { %>
                                    <% products.forEach( product=> { %>
                                        <tr>
                                            <td>
                                                <%= product.productname %>
                                            </td>
                                            <td>
                                                <%= product.category %>
                                            </td>
                                            <td>
                                                <%= product.price %>
                                            </td>
                                            <td>
                                                <%= product.model %>
                                            </td>
                                            <td>
                                                <%= product.description %>
                                            </td>
                                            <td>
                                                <img style="max-height: 50px; max-width: 50px;" src="/static/<%= product.image %>" alt="no img">

                                            </td>
                                            <td>
                                                <%= product.rating %>
                                            </td>
                                            <td>
                                                <% if (product.isListed) { %>
                                                    <span class="text-success">Listed</span>
                                                <% } else { %>
                                                    <span class="text-danger">Not Listed</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (product.isListed) { %>
                                                    <a href="/admin/unlistproduct/<%= product._id %>" class="btn btn-danger">UnList</a>
                                                <% } else { %>
                                                    <a href="/admin/unlistproduct/<%= product._id %>" class="btn btn-success">List</a>
                                                <% } %>
                                            </td>
                                            <td>
                                                <!-- Edit Button -->
                                                <a href="/admin/editproduct/<%= product._id %>" class="btn btn-primary">Edit</a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- footer -->
    <div class="mt-4">
    </div>

    <!-- Include Bootstrap JS (jQuery and Popper.js required) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
